<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExercisePageActivity">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Back"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/exPageTitleTextView"
        app:layout_constraintEnd_toEndOf="@+id/weightTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exPageTitleTextView" />

    <TextView
        android:id="@+id/exPageTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <Button
        android:id="@+id/lvl2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done(Level 2)"
        app:layout_constraintBottom_toTopOf="@+id/lvl3Btn"
        app:layout_constraintEnd_toEndOf="@+id/lvl1Btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lvl1Btn"
        app:layout_constraintTop_toBottomOf="@+id/lvl1Btn" />

    <Button
        android:id="@+id/lvl3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done(Level 3)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lvl2Btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lvl2Btn"
        app:layout_constraintTop_toBottomOf="@+id/lvl2Btn" />

    <Button
        android:id="@+id/lvl1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done (Level1)"
        app:layout_constraintBottom_toTopOf="@+id/lvl2Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exPageLinkTextView" />

    <TextView
        android:id="@+id/exPageDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@+id/exPageLinkTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exPageTitleTextView" />

    <TextView
        android:id="@+id/exPageLinkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch the video tutorial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

</androidx.constraintlayout.widget.ConstraintLayout>